@model MrFixIt.Models.Worker
<div class="text-center">
    <h4>Hello Worker @Model.FirstName @Model.LastName. You are Logged In</h4>
    <h3>Your Current Jobs:</h3>
    @foreach (var job in Model.Jobs)
    {
        <h5>@job.Title</h5>
        <p id="job-@job.JobId-activity"></p>
        @if (!job.Completed && !job.Pending) { <p id='job-@job.JobId-activity-static'>ACTIVE</p> }


        @if (job.Completed)
        {
            <p>Already completed</p>
        }
        else
        {
            <div id="job-@job.JobId-completion">
                <button name="JobId" class="mark-complete" value="@job.JobId">Mark complete</button>
            </div>

                @if (job.Pending)
                {
                    <button name="JobId" class="mark-active" value="@job.JobId">Mark as active job</button>
                }
        }


    }
</div>
