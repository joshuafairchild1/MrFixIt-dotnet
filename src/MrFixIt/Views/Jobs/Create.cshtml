@model MrFixIt.Models.Job
@{
    ViewBag.Title = "Add Job Listing";
}

<a class="back-arrow" href="/Jobs/Index">
    <i class="medium material-icons">arrow_back</i>
</a>

<h4 class="text-center">Add a new job</h4>
<div class="row">
    <div class="col s6 offset-s3">
        <div class="card text-center form-card">
            @using (Html.BeginForm())
            {
                <div class="input-field">
                    @Html.LabelFor(model => model.Title)
                    @Html.TextBoxFor(model => model.Title, new { @required = "true" })
                </div>
                <div class="input-field">
                    @Html.LabelFor(model => model.Description)
                    @Html.TextBoxFor(model => model.Description, new { @required = "true" })
                </div>

                <button type="submit" class="btn waves-effect waves-light">Add new job</button>
            }
        </div>
    </div>
</div>

