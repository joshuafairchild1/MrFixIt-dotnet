@using System.Security.Claims
@using MrFixIt.Models
@model Worker
@{
    ViewBag.Title = "Home";
}

<h2 class="text-center">Mr. Fix-It</h2>
<div class="row">
    <div class="form-card card home-nav-card col s6 offset-s3">
        @if (User.Identity.IsAuthenticated)
        {
            <h4>Hello @User.Identity.Name!</h4>
            
            @if (Model != null)
            {
                <h5>Signed in as worker @Model.FirstName @Model.LastName</h5>
            }
        }
        else
        {
            <form action="/Account/Register">
                <button type="submit" class="btn waves-effect waves-light">Register</button>
            </form>
            <form action="/Account/Login">
                <button type="submit" class="btn waves-effect waves-light">Login</button>
            </form>
        }
    </div>
</div>




