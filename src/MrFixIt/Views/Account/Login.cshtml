@using MrFixIt.ViewModels
@model LoginViewModel
@{
    ViewData["Title"] = "Log In";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<a class="back-arrow" href="/Account/Index">
    <i class="medium material-icons">arrow_back</i>
</a>
<h3 class="text-center">Log in with your account</h3>
<div class="row">
    <div class="col s6 offset-s3">
        <div class="card form-card">
            @using (Html.BeginForm())
            {
                <div class="input-field">
                    @Html.LabelFor(m => m.Email)
                    @Html.TextBoxFor(m => m.Email, new { @required = "true", @type = "email" })
                </div>
                <div class="input-field">
                    @Html.LabelFor(m => m.Password)
                    @Html.PasswordFor(m => m.Password, new { @required = "true" })
                </div>

                <input type="submit" value="Log in" class="btn waves waves-light" />
            }
        </div>
    </div>
</div>

